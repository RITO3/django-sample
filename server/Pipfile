[[source]]
name = "pypi"
url = "https://pypi.org/simple"
verify_ssl = true

[dev-packages]
flake8 = "*"
black = "*"
unittest-xml-reporting = "*"
coverage = "*"

[packages]
django = "*"

[requires]
python_version = "3.8"

[scripts]
test = "python -m unittest discover tests -v"
test_output = "python tests/unittest_runner.py"
test_cov = "coverage run tests/unittest_runner.py --rcfile .coveragerc"
cov_xml = "coverage xml -o ci_result/cov/coverage.xml"
cov_report = "coverage report"
cov_html = "coverage html -d ci_result/cov/htmlcov"


lint = "flake8"
lint_output = "flake8 --format=pylint --output-file=ci_result/flak8.out"
lint_output_code = "flake8 --show-source"
format = "black . --config pyproject.toml"
format_check = "black . --check --config pyproject.toml"

[pipenv]
allow_prereleases = true
